<launch>
  <arg name="mav_name" default="aeroname"/>
  <arg name="namespace" default="$(var mav_name)" />

  <arg name="fcu_url" default="tcp://127.0.0.1:5760" />
  <arg name="gcs_url" default="" />
  <!--arg name="gcs_url" default="udp://@192.168.1.224:14550" /-->
  <arg name="tgt_system" default="1" />
  <arg name="tgt_component" default="1" />
  <arg name="pluginlists_yaml" default="$(find-pkg-share mavros)/launch/px4_pluginlists.yaml" />
  <arg name="config_yaml" default="$(find-pkg-share px4_comm)/launch/px4_config_rpyrt.yaml" />
  <arg name="log_output" default="screen" />
  <arg name="fcu_protocol" default="v2.0" />
  <arg name="respawn_mavros" default="false" />



    <include file="$(find-pkg-share mavros)/launch/node.launch.py"/>

    <node pkg="px4_comm" exec="px4_comm_node" name="px4_comm" namespace="$(var namespace)" >
    </node>
</launch>
